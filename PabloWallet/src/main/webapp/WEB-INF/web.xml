<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>RegisterServlet</servlet-name> <!-- Nombre del servlet -->
        <servlet-class>alke.controller.RegisterServlet</servlet-class> <!-- Clase del servlet -->
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name> <!-- Nombre del servlet -->
        <url-pattern>/registerServlet</url-pattern> <!-- URL a la que serÃ¡ accesible el servlet -->
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>alke.controller.UserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>alke.controller.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
